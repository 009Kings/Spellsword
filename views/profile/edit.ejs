<h1>Edit <%= spellbook.name %></h1>

<form action="/profile/spellbook/?_method=PUT" method="post">
  <div>
  <label for="name">Character Name: </label>
  <input type="text" name="name" id="name" value="<%= spellbook.name %>">
  <label for="level">Level: </label>
  <input type="number" name="level" id="level" value="<%= spellbook.level %>">
  <label for="characterclass">Class: </label>
  <select name="characterclass" id="characterclass" value="<%= spellbook.name %>">
  <% classes.forEach(characterclass=>{ %>
    <% if (spellbook.characterclass.name === characterclass.name) { %>
      <option value="<%= characterclass.name %>" selected="selected"><%= characterclass.name %></option>
    <% } else { %>
      <option value="<%= characterclass.name %>"><%= characterclass.name %></option>
    <% } %>
  <% }) %>
  </select>
  </div>
 
  <div>
    <input type="hidden" name="spellbookId" value="<%= spellbook.id %>">
    <input type="submit" value="Edit <%= spellbook.name %>">
  </div>
</form>

<hr>

<form action="/profile/spellbook/?_method=DELETE" method="post">
  <input type="hidden" name="spellbookId" value="<%= spellbook.id %>">
  <input type="submit" value="Delete this Character">
</form>