<h2>Sign Up!</h2>

<!-- TODO: Email, username, firstname, lastname, password, password verification -->

<div>
    <form action="/auth/signup" method="post">
      <div>
          <label for="email">Email:</label>
          <input type="email" name="email" id="email" placeholder="example@email.com">
      </div>
      <div>
        <label for="new-username">Username:</label>
        <input type="text" name="new-username" id="new-username" placeholder="MrUsername98">
      </div>
      <div>
        <label for="first-name">First Name:</label>
        <input type="text" name="first-name" id="first-name" placeholder="Jane">
      </div>
      <div>
        <label for="last-name">Last Name:</label>
        <input type="text" name="last-name" id="last-name" placeholder="Johnson">
      </div>
      <div>
        <label for="password">Password:</label>
        <input type="password" name="password" id="password" placeholder="Password">
      </div>
      <div>
        <label for="password-check">Verify Password:</label>
        <input type="password" name="password-check" id="password-check" placeholder="Type password again">
      </div>
      <input type="submit" value="Log Me In">
    </form>
  </div>