<% if(alerts.error){ %>
  <% alerts.error.forEach((msg)=>{ %>
<div class="row">
  <div class="col s12 m5">
    <div class="card-panel teal errorCard">
      <span class="white-text">
          <%= msg %>
      </span>
    <div>
      <p class="close">Close</p>
    </div>
    </div>
    
  </div>
</div>
  <% }) %>
<% } %>

<script>
  [...document.getElementsByClassName("close")].forEach(elem => {
    elem.addEventListener("click", ()=>{
      document.getElementsByClassName("errorCard")[0].setAttribute("class", "hide");
    })
  });
</script>

